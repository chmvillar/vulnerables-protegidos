<main class="contenedor-formularios">

    <form class="default-form" method="POST">
        <h1 class="titulos"><%- nombrePagina %></h1>
        <div class="form-group">
            <label for="postId">Categoria Relacionada</label>
            <select name="postId" id="postId"  class="input select">
                <option value="" disabled selected>-- Seleccionar Categoria --</option>
                <% if (post.length > 0) { %>
                    <% post.forEach(post => { %>
                        <option <%= (publicaciones.postId === post.id) ? 'selected' : '' %> value="<%= post.id %>"><%= post.nombrepost %></option>
                    <% }) %>
                <% } %>
            </select>
        </div>
        <div class="form-group">
            <label for="titulo">Titulo del Post</label>
            <input class="input" type="text" name="titulo" id="titulo" value="<%= publicaciones.titulo  %>" required>
        </div>
        <div class="form-group">
            <label for="invitado">Invitado</label>
            <input class="input" type="text" name="invitado" id="invitado" placeholder="Nombre Invitado (Cantante, Animador etc)" value="<%= publicaciones.invitado  %>" >
        </div>
        <div class="columnas-2 grid">
            <div class="form-group">
                <label for="fecha">Fecha</label>
                <input class="input" type="date" name="fecha" id="fecha" value="<%= publicaciones.fecha  %>" required>
            </div>
            <div class="form-group">
                <label for="hora">Hora</label>
                <input class="input" type="time" name="hora" id="hora" value="<%= publicaciones.hora  %>" required>
            </div>
        </div>
        <div class="form-group">
            <label for="descripcionBreve">Descripción Breve</label>
            <input class="input" type="text" name="descripcionBreve" id="descripcionBreve" value="<%= publicaciones.descripcionBreve  %>"  placeholder="Descripción Breve Sobre el Evento" required>
        </div>
        <div class="form-group descripcion">
            <label for="descripcion">Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%= publicaciones.descripcion  %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="form-group">
            <label for="direccion">Dirección</label>
            <input class="input" type="text" id="direccion" name="direccion" placeholder="Dirección"  value="<%= publicaciones.direccion  %>" required>
        </div>
        <div class="form-group enviar">
            <input type="submit" class="custom-createcategoria btn-color-crecate" value="Guardar Publicación">
        </div>
    </form>
</main>
<style>
.form-group {
    margin: 10px 0;
    text-align: left;
}
</style>
