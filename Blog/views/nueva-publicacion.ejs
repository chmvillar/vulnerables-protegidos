    <h1 class="titulos"><%- nombrePagina %></h1>
    <form class="default-form" action="/nuevo-publicacion" method="POST">
        <div>
            <label>Post Relacionado</label>
            <br>
            <div class="select"> 
                <select name="postId" class="select">
                    <option value="" disabled selected>-- Seleccionar Post --</option>
                    <% if(post.length > 0 )  { %>
                        <% post.forEach(post => {  %>
                            <option value="<%= post.id %>"><%= post.nombrepost %></option>
                        <% }) %>
                    <% } %> 
                </select>
            </div>
        </div>
        <div class="campo">
            <label>Titulo del Post</label>
            <div class="control">
              <input class="input" type="text" name="titulo" placeholder="Titulo de la publicacion" required>
        </div>
        <div class="campo">
            <label>Invitado</label>
            <div class="control">
            <input class="input" type="text" name="invitado" placeholder="Nombre Invitado o Ponente (si aplica)" required>
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Fecha</label>
                <input class="input" type="date" name="fecha" placeholder="Nombre Invitado o Ponente (si aplica)" required>
            </div>
            <div class="campo">
                <label>Hora</label>
                <input class="input" type="time" name="hora" placeholder="Hora publicacion" required>
            </div>
        </div>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo buscador">
            <div class="campo">
                <label>Coloca la Dirección del Evento</label>
                <div class="control">
                <input class="input" type="text" id="formbuscador" placeholder="Ingresar la ubicación" required>
             <b><small>Ingresar una dirección estimada</small></b> 
            </div>
        </div>
        <div class="map">
            <div id="map" style="height: 180px;"></div>
           <b><p>Mueve el punto al lugar donde quiera establecer la dirección</p></b> 
        </div>
        <br>
        <div>
            <p class="informacion">Confirma que los siguientes campos sean correctos:</p>
        </div>
        <div class="campo">
            <label>Dirección</label>
            <div class="control">
              <input class="input" type="text" id="direccion" name="direccion" placeholder="Dirección" required>
        </div>
        <div class="campo">
            <label>Ciudad</label>
            <div class="control">
              <input class="input" type="text" id="ciudad" name="ciudad" placeholder="Ciudad" required>
        </div>
        <div class="campo">
            <label>Región</label>
            <div class="control">
              <input class="input" id="region" name="region" placeholder="Region" required>
        </div>
        <div class="campo">
            <label>País</label>
            <div class="control">
              <input class="input" type="text" id="pais" name="pais" placeholder="País" required>
        </div>
            <input type="hidden" id="lat" name="lat">
            <input type="hidden" id="lng" name="lng">
            <br>
        <div class="campo enviar">
            <input type="submit" class="button is-success" value="Crear Publicación">
        </div>
    </form>
</main>
