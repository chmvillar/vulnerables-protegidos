<main class="contenedor-formularios">

    <form class="default-form" action="/nueva-publicacion" method="POST" enctype="multipart/form-data">
        <h1 class="titulos"><%- nombrePagina %></h1>
        <div class="form-group">
            <label for="postId">Categoria Relacionado</label>
            <select name="postId" id="postId" class="input select">
                <option value="" disabled>-- Seleccionar Categoria --</option>
                <% post.forEach(post => { %>
                    <option value="<%= post.id %>" <% if (post.id == selectedPostId) { %>selected<% } %>><%= post.nombrepost %></option>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label for="titulo">Titulo de la publicación</label>
            <input class="input" type="text" name="titulo" id="titulo" placeholder="Titulo de la publicación" required>
        </div>

        <div class="form-group">
            <label for="invitado">Invitado</label>
            <input class="input" type="text" name="invitado" id="invitado" placeholder="Nombre Invitado (Cantante, Animador etc)">
        </div>
        <div class="columnas-2 grid">
            <div class="form-group">
                <label for="fecha">Fecha</label>
                <input class="input" type="date" name="fecha" id="fecha" placeholder="Nombre Invitado o Ponente (si aplica)" required>
            </div>
            <div class="form-group">
                <label for="hora">Hora</label>
                <input class="input" type="time" name="hora" id="hora" placeholder="Hora publicación" required>
            </div>
        </div>
        <div class="form-group">
            <label for="descripcionBreve">Descripción Breve</label>
            <input class="input" type="text" name="descripcionBreve" id="descripcionBreve" placeholder="Descripción Breve Sobre el Evento">
        </div>
        <div class="form-group descripcion">
            <label for="descripcion">Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <div class="form-group">
            <label for="direccion">Dirección</label>
            <input class="input" type="text" id="direccion" name="direccion" placeholder="Dirección" required>
        </div>

        <div>
            <label class="contenedor-txt img">Imagen para la publicación</label>
        </div>
          <div class="file has-name">
            <div class="file has-name">
              <span class="file-cta">
                <input type="file" name="imagen" required>
              </span>
          </div>
          </div>
        <div class="form-group enviar">
            <input type="submit" class="custom-createpublic btn-color-crecate" value="Crear Publicación">
        </div>
    </form>
</main>
<style>
body{
    background-color: #dddcdc;
}
.form-group {
    margin: 10px 0;
    text-align: left;
}
.enviar {
  text-align: center;
}
.custom-createpublic{
    border: 2px solid #3498db;
    padding: 10px 20px;
    background-color: #3498db;
    color: #fff;
    cursor: pointer;
    margin-right: 10px;
} 

.btn-color-crecate{
    border: 2px solid #0051ff; 
    background-color: #0051ff;
    border-radius: 6px;
    font-weight: bold; 

}
.default-form {
  text-align: center;
  max-width: 800px;
  max-height: 1050px;
  padding: 30px;
  background-color: #ffffff;
  border: 1px solid #ccc;
  border-radius: 0.5rem;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
}
.columnas-2 {
  display: flex;
  justify-content: space-between;
}
.contenedor-formularios {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 70vh;
  margin-top: 15px;
  margin-bottom: 5px;
}
.titulos{
    font-size: 2.2rem;
}
</style>
