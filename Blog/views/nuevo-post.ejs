<main class="contenedor">

    <div class="tarjeta">
      <h2 class="tarjeta-titulo">Creación Post</h2>
      <div class="contenido-post">
  
        <form action="/nuevo-post" method="POST" enctype="multipart/form-data">
  
          <div class="campo contenedor-txt ">
            <label>Titulo del Post</label>
            <div class="control">
              <input class="input" type="text" name="nombrepost" required>
            </div>
          </div>
          <div class="contenedor-txt">
            <label>Descripción</label>
            <div class="contenedor">
              <input type="hidden" id="x" name="descripcion">
              <trix-editor input="x"></trix-editor>
            </div>
          </div>
          <div>
            <label class="contenedor-txt img">Seleccione una Imagen</label>
        </div>
          <div class="file has-name">
            <div class="file has-name">
              <span class="file-cta">
                <input type="file" name="imagen">
              </span>
          </div>
          </div>
          <br>
          <button class="button is-success">Crear Post</button>
        </form>
      </div>
    </div>
  </main>