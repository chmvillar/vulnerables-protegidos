
<div class="head">
  <h2 class="titulo"><%= publicaciones.titulo %></h2>
</div>
<div >
  <img class="img" src="/uploads/publicaciones/<%= publicaciones.imagen %>" alt="<%= publicaciones.titulo %>">
  <div class="texto-publicacion"> 
  <p ><%- publicaciones.descripcion %></p>
</div>
</div>
<div class="footer">
  <div class="hora">
    <p class="titulo-hora"> Fecha</p>
    <% moment.locale('es') %>
    <p class="texto-hora"> <%= moment(publicaciones.fecha).format('LL'); %></p>
  </div>
  <div class="contador">
    <button class="custom-asis btn-color-asis" onclick="asistir()">Asistir</button>
  </div>
  <div class="lugar">
    <p class="titulo-lugar"> Direcci√≥n</p>
    <p class="texto-lugar"> <%= publicaciones.direccion %></p>
  </div>
</div>

